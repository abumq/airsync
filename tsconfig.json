{
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "allowJs": true,
    
    "target": "es2021",
    "declaration": true,
    "module": "commonjs",
    "rootDir": "./src",

    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,
    
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "docs",
    "dist",
    "tests",
    "build",
    "examples"
  ]
}

